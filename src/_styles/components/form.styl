.form
  overflow: auto;
  position: relative;
  margin: 20px auto;
  border-radius: 5px;
  padding: 25px 0 80px 0;
  border: 1px solid #d8d8d8;
  background-color: #f2f2f2;
  box-shadow: 0px 1px 1px rgba(0,0,0,0.1);

  @media screen and (min-width: 768px)
    width: 45%;

.breadcrumb
  bottom: 0;
  width: 100%;
  position: absolute;

.inputs
  margin: 20px 0 0 0;
  padding: 0 10%;

.label
  font-weight: 700;
  font-size: 1.25em;
  margin-bottom: 9px;
  display: inline-block;

.submit
  border: 0;
  color: white;
  float: right;
  width: 220px;
  cursor: pointer;
  font-weight: 700;
  text-align: center;
  padding: 13px 0 16px;
  border-radius: 100px;
  font-size: 1.33333rem;
  display: inline-block;
  background-color: #009d61;
  text-shadow: 0px 1px 1px rgba(0,0,0,0.3);

  &:hover
    text-shadow: none;
    background-color: #00b771;

.input
  margin-top: 20px;

  &:first-child
    margin-top: 0;

  &__item
    position: relative;
    font-size: 1.16667rem;
    background-color: white;
    border: 1px solid #d2d2d2;
    border-bottom: none;
    background-image: linear-gradient(#fff, #f9f9f9);

    &:first-child
      border-radius: 3px 3px 0 0;

    &:last-child
      border-radius: 0 0 3px 3px;
      border-bottom: 1px solid #d2d2d2;

    &:hover
      background-color: whitesmoke;
      background-image: linear-gradient(#f5f5f5, #efefef);

  &__label
    width: 100%;
    font-weight: 400;
    display: inline-block;
    padding: 11px 0px 12px 34px;

    .input__check:checked+&
      font-weight: 900;
      background-color: #e6f6fe;
      background-image: linear-gradient(#e6f6fe, #e7f6fe);

  &__check
    top: 14px;
    left: 10px;
    position: absolute;

  &__select
    width: 100%;
    height: 42px;
    border-radius: 3px;
    padding: 4px 7px 3px 2px;
    border: 1px solid #cccccc;

  &__txt
    width: 100%;
    height: 42px;
    padding: 0 8px;
    border-radius: 5px;
    border: 1px solid #cccccc;

  &__txt-area
    min-height: 80px;
    border-radius: 3px;
    padding: 5px 8px 4px 3px;
    border: 1px solid #cccccc;
    resize: none;
    width: 100%;
